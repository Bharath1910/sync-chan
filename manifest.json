{
    "manifest_version": 3,
    "name": "Sync Chan",
    "version": "0.1.0",
    "content_scripts" : [
        {
            "matches": ["http://localhost:8000/authenticated"],
            "js": ["scripts/get-token.js"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/default/popup.html"
    }
}